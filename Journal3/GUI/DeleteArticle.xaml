<Window x:Class="GUI.DeleteArticle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="DeleteArticle" Height="350" Width="600" ResizeMode="NoResize">
    <Grid>
        <Image Source="E:\Journal\article.jpg"  Stretch="UniformToFill"/>
        <Button x:Name="button" Content="Delete" HorizontalAlignment="Left" Margin="188,221,0,0" VerticalAlignment="Top" Width="196" Height="54" FontWeight="Bold" Click="button_Click" Background="#FFE4E4E4" FontSize="21.333"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="53" Margin="84,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="414" Background="#FFE4E4E4" PreviewTextInput="textBox_PreviewTextInput" FontWeight="Bold" FontSize="21.333" TextAlignment="Center"/>
        <Label x:Name="label" Content="            Article ID" HorizontalAlignment="Left" Margin="106,0,0,218" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="32" Width="363" Height="51" Foreground="#FF363209"/>

    </Grid>
</Window>
